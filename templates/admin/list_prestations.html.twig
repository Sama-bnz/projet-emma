{% extends 'admin/base.html.twig' %}

{% block title %}
    <title>Les Prestations</title>
{% endblock %}

{% block header %}
    <header class="hautpage">
        <a href="{{ path ('home')}}"> <img class="logo-header"  src="{{ asset('assets/img/logo_emma.jpg') }}" ></a>
        <a class="connexion" href="">Connexion</a>
        <a href="{{ path('admin_create_prestation') }}">Créer une prestation</a>

        <nav class="header-top">
            <ul class="nav-items">
                <li class="nav-items"><a href="{{ path ('home')}}">Accueil</a></li>
                <li class="nav-items"><a href="{{ path('admin_apropos') }}">A propos</a></li>
                <li class="nav-items"><a href="{{ path('admin_contact')}}">Contact</a></li>
                <li class="nav-items"><a href="{{ path('admin_reservation') }}">Prendre rendez-vous</a></li>
                <li class="nav-items"><a href="{{ path('admin_liste_reservation') }}">Liste des rendez-vous</a></li>
            </ul>
        </nav>
    </header>
{% endblock %}

{% block body %}
    {% for category in categories %}

        <h1>{{ category.name }}</h1>

        {% for type in category.type %}
            <h3>{{ type.name }}</h3>
            <p>{{ type.description }}</p>
            <p>{{ type.duringtime|date('H:i') }}</p>
            <p>{{ type.price }}</p>
        {% endfor %}
        <article>
            <a href="{{ path('admin_show_prestation',{'id':category.id}) }}">En savoir plus sur la prestation</a>
            <br>
        <a class="lien" href="{{ path ('admin_update_prestation',{'id':category.id })}}">Voulez-vous modifié cette prestation? </a>
            <br>
        <a class="lien" href="{{ path ('admin_delete_prestation',{'id':category.id })}}">Voulez-vous supprimé cette prestation ? </a>

    </article>
    {% endfor %}
{% endblock %}