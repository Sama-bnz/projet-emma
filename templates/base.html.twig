<!doctype html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block title %}
        <title>Acceuil</title>
    {% endblock %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/owl.theme.default.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>

    <header class="hautpage">
        {% block header %}
            <a href="{{ path ('home')}}"> <img class="logo-header"  src="{{ asset('assets/img/logo_emma.jpg') }}" ></a>
        <nav class="header-top">
            <ul class="nav">
                <li class="nav-items"><a href="{{ path ('home')}}">Accueil</a></li>
                <li class="nav-items"><a href="{{ path('apropos') }}">A propos</a></li>
                <li class="nav-items"><a href="{{ path('list_prestations') }}">Prestation</a></li>
                <li class="nav-items"><a href="{{ path('contact')}}">Contact</a></li>
                <li class="nav-items"><a href="{{ path('reservation') }}">Prendre rendez-vous</a></li>
            </ul>
        </nav>
        {% if app.user %}
            <a href="{{ path('app_logout') }}" class="connexion">Deconnexion</a>
            <a href="{{ path('update_user',{'id':app.user.id}) }}" class="connexion">Modifier votre compte</a>

        {% else %}
            <div class="connexionWrapper">
                <a href="{{ path('app_login') }}" class="connexion">Connexion</a>
                <a href="{{ path('create_user') }}" class="connexion">Inscription</a>
            </div>



        {% endif %}

        </header>
        {% endblock %}
<body>

    {% block body %}
    <main>
    {% block main %}
    {% endblock %}
    </main>
    {% endblock %}


</body>
    <footer class="footer">
        {% block footer %}
        {% endblock %}
        {#    <a href="{{ path ('home')}}"><img class="logo-footer" src="{{ asset('assets/img/logo_emma.jpg') }}"></a>#}
    </footer>
{% block js %}
    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="{{ asset('assets/js/owl.carousel.js') }}"></script>

    <script>
        var owl = $('.owl-carousel');
        owl.owlCarousel({
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:3
                },
                1000:{
                    items:5
                }
            },
            loop:true,
            margin:10,
            autoplay:true,
            autoplayTimeout:2000,
            autoplayHoverPause:true,
            dots:true
        });
    </script>
{% endblock %}
</html>
